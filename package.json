{
  "name": "graasp",
  "version": "0.1.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "description": "Graasp next level",
  "repository": {
    "type": "git",
    "url": "https://github.com/graasp/graasp"
  },
  "license": "AGPL-3.0-only",
  "author": "Graasp Association",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "NODE_PATH=./dist node dist/server.js",
    "watch-node": "NODE_PATH=./dist nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "DISABLE_LOGS=true jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "build-ts-declaration": "rm -rf ./types && tsc --project tsconfig.declaration.json --declaration --declarationDir ./types",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "prettier:check": "prettier --check \"{src,test}/**/*.ts\"",
    "prettier:write": "prettier --write \"{src,test}/**/*.ts\"",
    "copy-static-assets": "node copyStaticAssets.mjs",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "NODE_PATH=./dist nodemon --inspect dist/server.js",
    "serve-debug-break": "NODE_PATH=./dist nodemon --inspect-brk dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "some-comments": [
    "test: tap -J test/*.test.ts test/**/*.test.ts",
    "test: jest --forceExit --coverage --verbose",
    "fastify-swagger: ^4.5.0",
    "fastify-compress: ^3.4.0",
    "fastify-routes: ^3.0.1",
    "ajv: ^8.3.0"
  ],
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^8.6.0",
    "fastify": "^3.19.0",
    "fastify-auth": "^1.1.0",
    "fastify-bearer-auth": "^6.0.0",
    "fastify-compress": "^3.6.0",
    "fastify-cors": "^4.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-plugin": "^3.0.0",
    "fastify-secure-session": "^2.3.1",
    "fluent-json-schema": "^2.0.5",
    "graasp-apps": "git://github.com/graasp/graasp-apps.git#main",
    "graasp-document-item": "git://github.com/graasp/graasp-document-item.git#main",
    "graasp-embedded-link-item": "git://github.com/graasp/graasp-embedded-link-item.git#main",
    "graasp-file-item": "git://github.com/graasp/graasp-file-item.git#master",
    "graasp-item-flagging": "git://github.com/graasp/graasp-item-flagging.git#master",
    "graasp-item-login": "git://github.com/graasp/graasp-item-login.git#master",
    "graasp-item-tags": "git://github.com/graasp/graasp-item-tags.git#master",
    "graasp-mailer": "git://github.com/graasp/graasp-mailer.git#master",
    "graasp-plugin-chatbox": "git://github.com/graasp/graasp-plugin-chatbox.git#main",
    "graasp-public-items": "git://github.com/graasp/graasp-public-items.git#main",
    "graasp-recycle-bin": "git://github.com/graasp/graasp-recycle-bin.git#main",
    "graasp-s3-file-item": "git://github.com/graasp/graasp-s3-file-item.git#master",
    "graasp-websockets": "git://github.com/graasp/graasp-websockets.git#master",
    "jsonwebtoken": "^8.5.1",
    "slonik": "^23.8.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/concurrently": "^5.2.1",
    "@types/eslint": "^7.2.14",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.5",
    "@types/supertest": "^2.0.11",
    "@types/tap": "^14.10.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4.3.4",
    "concurrently": "^5.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.10",
    "pino-pretty": "^4.8.0",
    "prettier": "2.4.1",
    "shelljs": "^0.8.4",
    "slonik-interceptor-query-logging": "^1.3.9",
    "supertest": "^6.1.3",
    "tap": "^14.11.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  }
}
