{
  "name": "graasp",
  "version": "0.1.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "description": "Graasp next level",
  "repository": {
    "type": "git",
    "url": "https://github.com/graasp/graasp"
  },
  "license": "AGPL-3.0-only",
  "author": "Graasp Association",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "NODE_PATH=./dist node dist/server.js",
    "watch-node": "NODE_PATH=./dist nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "DISABLE_LOGS=true jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "build-ts-declaration": "rm -rf ./types && tsc --project tsconfig.declaration.json --declaration --declarationDir ./types",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "node copyStaticAssets.mjs",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "NODE_PATH=./dist nodemon --inspect dist/server.js",
    "serve-debug-break": "NODE_PATH=./dist nodemon --inspect-brk dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "some-comments": [
    "graasp-file-item: file:../graasp-file-item",
    "graasp-file-item: git://github.com/graasp/graasp-file-item#master",
    "file:../graasp-file-item",
    "test: tap -J test/*.test.ts test/**/*.test.ts",
    "test: jest --forceExit --coverage --verbose",
    "fastify-swagger: ^4.3.1"
  ],
  "dependencies": {
    "dotenv": "^8.2.0",
    "fastify": "^3.12.0",
    "fastify-compress": "^3.4.0",
    "fastify-cors": "^4.1.0",
    "fastify-jwt": "^2.3.0",
    "fastify-plugin": "^3.0.0",
    "fastify-secure-session": "^2.3.1",
    "graasp-file-item": "git://github.com/graasp/graasp-file-item#master",
    "graasp-item-tags": "git://github.com/graasp/graasp-item-tags#master",
    "graasp-mailer": "git://github.com/graasp/graasp-mailer#master",
    "graasp-s3-file-item": "git://github.com/graasp/graasp-s3-file-item#master",
    "slonik": "^23.5.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/concurrently": "^5.2.1",
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "@types/supertest": "^2.0.10",
    "@types/tap": "^14.10.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "chai": "^4.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.5.0",
    "shelljs": "^0.8.4",
    "slonik-interceptor-query-logging": "^1.3.9",
    "supertest": "^6.1.3",
    "tap": "^14.11.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
